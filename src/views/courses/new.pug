extends ../layouts/page.pug

block content
  if error
    p= error.message

  h2 Course creation
  form(action = '/courses', method = 'post')
    div
      label Title:
        input(type = 'text', name = 'title')
    div
      label Description:
        input(type = 'text', name = 'description')
    input(type = 'submit', value = 'Add')